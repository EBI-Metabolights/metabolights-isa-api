{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "ISA product node schema",
    "description": "JSON-schema representing a product node in ISA create model v2",
    "type": "object",
    "properties": {
        "@id": { "type": "string", "format": "uri" },
        "@type": {"enum":["isatools.create.models.ProductNode"]},
        "name": { "type":"string"},
        "productType": {
             "enum":["sample","extract","labeled extract"]
            },
        "size": {"type":"integer", "minimum" : 1},
        "characteristics": { 
            "type":"array",
            "items" : {
                "$ref": "characteristic_schema.json#"
            }
    }
}
}