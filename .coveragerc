[run]
source = isatools
relative_files = True

omit =
    docs/*
    features/*
    tests/*
    isatools/convert/experimental/*
    isatools/net/storage_adapter.py
    isatools/io/isatab_configurator.py
    isatools/net/metabolights/helpers.py
    isatools/net/metabolights/html.py

[report]
exclude_lines =
    pragma: no cover
    raise NotImplementedError
    except ImportError
    if __name__ == .__main__.: